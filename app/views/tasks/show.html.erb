
<div class ="container pt-5">
  <div class = "d-flex justify-content-between" >
    <h2><%= @task.title %></h2>
    <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary" %>
  </div>

  <p><%= @task.details %></p>


  <% if @task.completed %>
  <p> yes </p>
  <% else  %>
    <p> no </p>
  <% end  %>


  <p><%= link_to "Back to list", tasks_path %></p>
</div>






